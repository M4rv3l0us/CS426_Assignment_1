<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/Poster"
        android:layout_width="382dp"
        android:layout_height="365dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rectangle" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="169dp"
        android:layout_height="112dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="212dp"
        android:layout_marginBottom="250dp"
        app:layout_constraintBottom_toBottomOf="@+id/Poster"
        app:layout_constraintEnd_toEndOf="@+id/Poster"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.727"
        app:srcCompat="@drawable/poster" />

    <TextView
        android:textColor="#000"
        android:id="@+id/MovieTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="32dp"
        android:text="Title"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/Genres"
        android:layout_width="125dp"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/MovieTitle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/MovieTitle"
        app:layout_constraintTop_toBottomOf="@+id/MovieTitle"></LinearLayout>

    <TextView
        android:textColor="#A6A6A6"
        android:id="@+id/textView3"
        android:layout_width="125dp"
        android:layout_height="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/Genres"
        app:layout_constraintEnd_toEndOf="@+id/Genres"
        app:layout_constraintStart_toStartOf="@+id/Genres"
        app:layout_constraintTop_toTopOf="@+id/Genres" />

    <TextView
        android:id="@+id/Runtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="6dp"
        android:text="Runtime"
        android:textColor="#A6A6A6"
        android:textSize="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/IMDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:text="Rating"
        android:textSize="8dp"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageView
        android:id="@+id/Star"
        android:layout_width="80dp"
        android:layout_height="12dp"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toEndOf="@+id/IMDB"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/star" />

    <ImageView
        android:id="@+id/Dot"
        android:layout_width="290dp"
        android:layout_height="9dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="37dp"
        app:layout_constraintEnd_toEndOf="@+id/Poster"
        app:layout_constraintHorizontal_bias="0.388"
        app:layout_constraintStart_toStartOf="@+id/Poster"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:srcCompat="@drawable/dot" />

    <TextView
        android:id="@+id/Description"
        android:layout_width="318dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Description"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/Poster"
        app:layout_constraintEnd_toEndOf="@+id/Poster"
        app:layout_constraintHorizontal_bias="0.684"
        app:layout_constraintStart_toStartOf="@+id/Poster"
        app:layout_constraintTop_toBottomOf="@+id/Dot"
        app:layout_constraintVertical_bias="0.016" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        app:layout_constraintEnd_toEndOf="@+id/Poster"
        app:layout_constraintHorizontal_bias="0.934"
        app:layout_constraintStart_toStartOf="@+id/Poster"
        app:layout_constraintTop_toTopOf="@+id/Description"
        app:srcCompat="@drawable/oval" />

    <ImageView
        android:id="@+id/Play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:srcCompat="@drawable/oval2" />

    <TextView
        android:id="@+id/Format"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:text="Format"
        android:textSize="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/IMDB"
        app:layout_constraintStart_toStartOf="@+id/Star"
        app:layout_constraintTop_toTopOf="@+id/IMDB"
        app:layout_constraintVertical_bias="0.0" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_date"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/Poster"
        app:layout_constraintHorizontal_bias="0.597"
        app:layout_constraintStart_toStartOf="@+id/Poster"
        app:layout_constraintTop_toBottomOf="@+id/Description" />

    <TextView
        android:id="@+id/Showdates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:text="Showtimes"
        android:textColor="#03A9F4"
        android:textSize="10dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/recycler_date"
        app:layout_constraintStart_toStartOf="@+id/Description" />

    <android.support.v7.widget.RecyclerView

        android:id="@+id/recycler_hour"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/Poster"
        app:layout_constraintHorizontal_bias="0.597"
        app:layout_constraintStart_toStartOf="@+id/Poster"
        app:layout_constraintTop_toBottomOf="@+id/recycler_date" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="300dp"
        android:layout_height="275dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        android:weightSum="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <Button

            android:id="@+id/cgv"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/cgv" />

        <Button
            android:id="@+id/galaxy"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/galaxy" />

        <Button
            android:id="@+id/lotte"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/lotte" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="91dp"
        android:layout_height="89dp"
        android:layout_marginTop="82dp"
        android:layout_marginEnd="244dp"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.166"
        app:srcCompat="@drawable/cine" />

</android.support.constraint.ConstraintLayout>