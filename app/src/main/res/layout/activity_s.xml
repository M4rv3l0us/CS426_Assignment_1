<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/shape"
        android:layout_width="382dp"
        android:layout_height="400dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/shape" />

    <ImageView
        android:id="@+id/avenger"
        android:layout_width="150dp"
        android:layout_height="112dp"
        android:layout_marginBottom="308dp"
        app:layout_constraintBottom_toBottomOf="@+id/shape"
        app:layout_constraintEnd_toEndOf="@+id/shape"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/shape"
        app:srcCompat="@drawable/poster" />

    <TextView
        android:id="@+id/MovieTitle"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="Title"
        android:textColor="#000"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/avenger"
        app:layout_constraintTop_toTopOf="@+id/shape" />

    <LinearLayout
        android:id="@+id/Genres"
        android:layout_width="125dp"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/MovieTitle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/MovieTitle"
        app:layout_constraintTop_toBottomOf="@+id/MovieTitle"></LinearLayout>

    <TextView
        android:textColor="#A6A6A6"
        android:id="@+id/textView3"
        android:layout_width="125dp"
        android:layout_height="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/Genres"
        app:layout_constraintEnd_toEndOf="@+id/Genres"
        app:layout_constraintStart_toStartOf="@+id/Genres"
        app:layout_constraintTop_toTopOf="@+id/Genres" />

    <TextView
        android:id="@+id/Runtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="6dp"
        android:text="Runtime"
        android:textColor="#A6A6A6"
        android:textSize="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/IMDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:text="Rating"
        android:textSize="8dp"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageView
        android:id="@+id/Star"
        android:layout_width="80dp"
        android:layout_height="12dp"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toEndOf="@+id/IMDB"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/star" />

    <ImageView
        android:id="@+id/Dot"
        android:layout_width="240dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="156dp"
        app:layout_constraintBottom_toBottomOf="@+id/shape"
        app:layout_constraintEnd_toEndOf="@+id/shape"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/shape"
        app:srcCompat="@drawable/dot" />
    <TextView
        android:id="@+id/Format"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:text="Format"
        android:textSize="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/IMDB"
        app:layout_constraintStart_toStartOf="@+id/Star"
        app:layout_constraintTop_toTopOf="@+id/IMDB"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Cinema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="24dp"
        android:text="Cinema"
        android:textColor="#8D8888"
        android:textSize="10dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/shape"
        app:layout_constraintTop_toBottomOf="@+id/avenger" />

    <TextView
        android:id="@+id/CinemaName"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_marginTop="8dp"
        android:text="CinName"
        app:layout_constraintStart_toStartOf="@+id/Cinema"
        app:layout_constraintTop_toBottomOf="@+id/Cinema" />

    <TextView
        android:id="@+id/Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:text="Date"
        android:textColor="#8D8888"
        android:textSize="10dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/Cinema"
        app:layout_constraintStart_toEndOf="@+id/Cinema" />

    <TextView
        android:id="@+id/CinDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="CinDate"
        app:layout_constraintStart_toStartOf="@+id/Date"
        app:layout_constraintTop_toBottomOf="@+id/Date" />

    <TextView
        android:id="@+id/Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Time"
        android:textColor="#8D8888"
        android:textSize="10dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/Date"
        app:layout_constraintEnd_toEndOf="@+id/shape"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toEndOf="@+id/Date"
        app:layout_constraintTop_toBottomOf="@+id/Format"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/CinTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="CinTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Time"
        app:layout_constraintTop_toBottomOf="@+id/Time" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="141dp"
        android:layout_height="32dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/Dot"
        app:layout_constraintTop_toBottomOf="@+id/Dot"
        app:srcCompat="@drawable/ticketid" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="51dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/shape"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/Dot"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/price" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="191dp"
        android:layout_height="15dp"
        android:layout_marginBottom="52dp"
        app:layout_constraintBottom_toBottomOf="@+id/shape"
        app:layout_constraintEnd_toEndOf="@+id/shape"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/shape"
        app:srcCompat="@drawable/confirm" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="172dp"
        android:layout_marginTop="144dp"
        app:layout_constraintStart_toStartOf="@+id/shape"
        app:layout_constraintTop_toBottomOf="@+id/shape"
        app:srcCompat="@drawable/tid" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/shape"
        app:layout_constraintTop_toTopOf="@+id/shape"
        app:layout_constraintVertical_bias="0.476"
        app:srcCompat="@drawable/tid" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="275dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="@+id/shape"
        app:layout_constraintStart_toStartOf="@+id/shape"
        app:layout_constraintTop_toBottomOf="@+id/CinDate"
        app:srcCompat="@drawable/code" />

</android.support.constraint.ConstraintLayout>